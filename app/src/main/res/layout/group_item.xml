<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <RelativeLayout
        android:id="@+id/group_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/group_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_ex_group1"
            android:layout_alignParentStart="true"
            android:contentDescription="Group Icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/group_icon"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/text_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/text_group_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#888888" />

            <TextView
                android:id="@+id/text_group_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>

        <ImageView
            android:id="@+id/star_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_star_outline"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/settle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정산 하기"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1927EC"
            android:background="@drawable/rounded_corner"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/star_button"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
