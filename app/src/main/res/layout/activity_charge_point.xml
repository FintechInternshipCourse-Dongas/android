<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FF"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:layout_alignParentStart="true"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="충전"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:gravity="center" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toTopOf="@id/quick_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border"
                android:padding="12dp"
                android:layout_marginTop="16dp">

                <EditText
                    android:id="@+id/edit_recharge_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="얼마를 충전할까요?"
                    android:textSize="18sp"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:textColorHint="#B0B0B0"
                    android:textColor="#000000"
                    android:gravity="center_vertical|start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/error_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="최대 충전금액은 200만원 입니다"
                android:textSize="14sp"
                android:textColor="#FF0000"
                android:visibility="gone"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출금 계좌"
                        android:textSize="16sp"
                        android:textColor="#B0B0B0"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/transfer_bank"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="김가은 국민계좌"
                        android:textSize="16sp"
                        android:textColor="#000000" />

                    <ImageView
                        android:id="@+id/account_dropdown"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_modify_account"
                        android:contentDescription="Account Dropdown" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="스르륵 머니"
                        android:textSize="16sp"
                        android:textColor="#B0B0B0"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/balance_after_transaction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0원"
                        android:textSize="16sp"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/quick_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/recharge_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="50dp">

        <Button
            android:id="@+id/quick_button_1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+천원"
            android:background="?android:attr/selectableItemBackground"
            android:textSize="14sp"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/quick_button_5000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+5천원"
            android:background="?android:attr/selectableItemBackground"
            android:textSize="14sp"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/quick_button_10000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1만"
            android:background="?android:attr/selectableItemBackground"
            android:textSize="14sp"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/quick_button_50000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+5만"
            android:background="?android:attr/selectableItemBackground"
            android:textSize="14sp"
            android:padding="12dp"
            android:textColor="#000000" />
    </LinearLayout>

    <Button
        android:id="@+id/recharge_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="충전하기"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#1927EC"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_corner" />
</androidx.constraintlayout.widget.ConstraintLayout>